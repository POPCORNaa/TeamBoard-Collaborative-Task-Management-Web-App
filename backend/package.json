{
  "name": "express-api-starter",
  "version": "2.0.0",
  "description": "A basic starter for an express.js API with backend and frontend tests",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "node --watch --env-file=.env.development --import ./src/instrumentation.js src/index.js",
    "start": "node --env-file=.env.production --import ./src/instrumentation.js src/index.js",
    "lint": "biome check --fix ./src",
    "test": "npm run test:backend",
    "test:backend": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config jest.backend.config.js --forceExit",
    "build": "echo 'No build step required for backend'"
  },
  "dependencies": {
    "@opentelemetry/api-logs": "^0.208.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.2",
    "@opentelemetry/exporter-logs-otlp-http": "^0.208.0",
    "@opentelemetry/sdk-logs": "^0.208.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.19.3",
    "morgan": "^1.10.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "jest": "^29.0.0",
    "supertest": "^7.1.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "author": "CJ R. <cj@null.computer> (https://w3cj.now.sh)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/w3cj/express-api-starter.git"
  },
  "keywords": []
}
